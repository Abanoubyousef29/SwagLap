<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">

    <parameter name="browserName" value="firefox-headless"/>

    <test name="check valid login scenarios">
        <classes>
            <class name="TC01_Login">
                <methods>
                    <include name="validLogin"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="check unvalid login scenarios">
        <classes>
            <class name="TC01_Login">
                <methods>
                    <include name="unValidLogin"/>
                </methods>
            </class>
        </classes>
    </test>


</suite>